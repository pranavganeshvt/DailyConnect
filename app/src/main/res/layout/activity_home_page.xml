<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:text="@string/profile"
            android:textColor="@android:color/black" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/settings"
            android:backgroundTint="@color/white"
            android:textColor="@android:color/black"
            android:id="@+id/settings">
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:background="#430031"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="32sp"
        android:text="@string/daily_connect" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login"
            android:layout_width="206dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:text="@string/refer_a_friend"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="206dp"
            android:layout_height="50dp"
            android:text="@string/wallet"
            android:backgroundTint="@color/white"
            android:textColor="@android:color/black"
            android:id="@+id/signup">
        </Button>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#630031"
        android:textColor="@android:color/white"
        android:text="@string/deals_and_cashbacks"
        android:layout_gravity="center"
        android:textSize="24sp"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/movie_adver"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/grocery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/flightTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieTickets" />

    </LinearLayout>


</LinearLayout>