<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:background="#630031"
        android:textColor="#FFF"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="32sp"
        android:text="Secure Checkout" />


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardCornerRadius="4dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="One-Way flight"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="1 ticket, 2 adults"
                android:textColor="#000"
                android:textSize="13sp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp">
            </Space>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D3D3D3"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/text_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Charlotte (CLT) to Roanoke (ROA)"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/text_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Wed, 10 May"
                android:textColor="#000"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/text_5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="18:00 to 19:00 (1h 00m)"
                android:textColor="#000"
                android:textSize="13sp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/text_6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="American Airlines 5083 operated by PSA Airlines as American Eagle"
                android:textColor="#000"
                android:textSize="13sp"
                android:fontFamily="sans-serif-light"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp">
            </Space>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D3D3D3"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/text_7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Your price summary"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp">
            </Space>
            <TextView
                android:id="@+id/text_8"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Traveller 1: Adult"
                android:textColor="#630031"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_9"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Traveller 2: Adult"
                android:textColor="#630031"
                android:textSize="13sp"
                />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text = "Total: $229.34"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textAlignment="gravity"
                    />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardCornerRadius="4dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#FFF"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_10"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Enter Traveller Details:"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_11"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="13sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>